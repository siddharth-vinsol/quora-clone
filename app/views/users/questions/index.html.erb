<h1 class="page-heading">Your Questions</h1>
<%= link_to 'Post a new Question', new_user_question_path %>
<div class="questions-container">
  <% @questions.each do |question| %>
    <div class="question-container">
      <div class="question-container-left">
        <div>Title: <%= question.title %></div>
        <div>Content: <%= truncate_action_text(question.content, 100) %></div>
        <%= render_filelink_if_exists question.attachment %>
        <div class="notice"><%= t('notice.user.question.draft_question') unless question.published_at? %></div>
      </div>
      <div class="question-container-right">
        <%= button_to 'Edit', edit_user_question_path(question), method: :get%>
        <%= button_to 'Delete', user_question_path(question), method: :delete %>
        <% unless question.published_at? %>
          <%= button_to 'Publish', publish_user_question_path(question), method: :post %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
