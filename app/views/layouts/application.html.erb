<!DOCTYPE html>
<html>
  <head>
    <title>QuoraClone</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <div>Quora Clone App</div>
    </header>

    <main class="<%= controller.controller_name %>">
      <div class="notice">
        <%= notice if notice %>
      </div>
      <%= button_to 'Logout', session_path, method: :delete, class: 'logout-button' if session[:user_id] %>
      <%= yield %>
    </main>
  </body>
</html>
