<!DOCTYPE html>
<html>
  <head>
    <title>QuoraClone</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300&display=swap" rel="stylesheet">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <%= yield :head %>
  </head>

  <body>
    <header class="main">
      <div>Quora Clone App</div>
        <div>
          <%= render 'notifications/notification_icon' if signed_in? %>
          <%= link_to 'Browse Questions', root_path %>
          <% if signed_in? %>
            <%= link_to 'Admin Dashboard', admin_path if current_user.admin? %>
            <%= link_to 'Your Profile', user_path %>
            <%= link_to 'Your Questions', questions_path %>
            <%= button_to 'Logout', session_path, method: :delete, class: 'logout-button' %>
          <% else %>
            <%= link_to 'Login', login_path %>
          <% end %>
        </div>
    </header>

    <main class="<%= controller.controller_name %>">
      <div class="notice" id="notice">
        <%= notice if notice %>
      </div>
      <%= yield %>
    </main>

    <% if signed_in? %>
    <% end %>
      <%= javascript_include_tag 'scripts/notification_handler', 'data-turbolinks-track': 'reload', defer: true %>
  </body>
</html>
